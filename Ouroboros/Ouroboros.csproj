<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<Nullable>enable</Nullable>
		<Version>2.0.0</Version>
	</PropertyGroup>

	<PropertyGroup>
		<!-- Identity -->
		<PackageId>OuroborosAI.Core</PackageId>
		<Authors>Brian MacKay</Authors>

		<!-- Legal -->
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Copyright>Brian MacKay 2022-2023</Copyright> 

		<!-- Location -->
		<PackageProjectUrl>https://github.com/kinetiq/Ouroboros</PackageProjectUrl>
		<RepositoryUrl>https://github.com/kinetiq/Ouroboros</RepositoryUrl>
		<!--<PackageReadmeFile>..\README.md</PackageReadmeFile>-->
		<RepositoryType>git</RepositoryType>
		
		<!-- Release -->
		<PackageVersion>2.0.0</PackageVersion>
		<Description>
			Powerful layer on top of OpenAI supporting chaining and recursion scenarios. Includes fluent SDK for chaining and text processing. Still very early an .NET 7 only; Docs and broader support to follow.
		</Description>
		<PackageReleaseNotes>Moved to .NET 7, removed a lot of experimental recursion code, added new API for chat-mode chaining.</PackageReleaseNotes>
		<PackageTags>gpt3 llm openai chatgpt c#</PackageTags>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="LargeLanguageModels\OpenAI\**" />
	  <EmbeddedResource Remove="LargeLanguageModels\OpenAI\**" />
	  <None Remove="LargeLanguageModels\OpenAI\**" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="AI.Dev.OpenAI.GPT" Version="1.0.2" />
		<PackageReference Include="Betalgo.OpenAI" Version="7.0.0" />
		<PackageReference Include="Polly" Version="7.2.4" />
		<PackageReference Include="Polly.Contrib.WaitAndRetry" Version="1.1.1" />
		<PackageReference Include="Z.ExtensionMethods.WithNamespace" Version="2.1.1" />
	</ItemGroup>
</Project>
