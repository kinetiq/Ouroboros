<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<Version>0.8.7</Version>
	</PropertyGroup>

	<PropertyGroup>
		<!-- Identity -->
		<PackageId>OuroborosAI.Core</PackageId>
		<Authors>Brian MacKay</Authors>

		<!-- Legal -->
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Copyright>Brian MacKay 2022-2023</Copyright> 

		<!-- Location -->
		<PackageProjectUrl>https://github.com/kinetiq/Ouroboros</PackageProjectUrl>
		<RepositoryUrl>https://github.com/kinetiq/Ouroboros</RepositoryUrl>
		<!--<PackageReadmeFile>..\README.md</PackageReadmeFile>-->
		<RepositoryType>git</RepositoryType>
		
		<!-- Release -->
		<PackageVersion>0.8.7</PackageVersion>
		<Description>
			Powerful layer on top of OpenAI supporting chaining and recursion scenarios. Includes fluent SDK for chaining and text processing. Still very early an .NET 6 only; Docs and broader support to follow.
		</Description>
		<PackageReleaseNotes>Added AsyncHandlers back in.</PackageReleaseNotes>
		<PackageTags>gpt3 llm openai chatgpt c#</PackageTags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="AI.Dev.OpenAI.GPT" Version="1.0.2" />
		<PackageReference Include="Betalgo.OpenAI.GPT3" Version="6.7.3" />
		<PackageReference Include="Microsoft.VisualStudio.Threading" Version="17.5.22" />

		<!-- This is used by Microsoft.VisualStudio.Threading... By referencing it directly,
		we can mark it with PrivateAssets, which prevents the analyzers from this package from
		infecting projects that consume Ouro. -->
		<PackageReference Include="Microsoft.VisualStudio.Threading.Analyzers" Version="17.5.22">
		  <PrivateAssets>all</PrivateAssets>
		  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>


		<PackageReference Include="Polly" Version="7.2.3" />
		<PackageReference Include="Z.ExtensionMethods.WithNamespace" Version="2.1.1" />
	</ItemGroup>
</Project>
